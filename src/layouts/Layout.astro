---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="zh-cn">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <meta
      name="description"
      content="spans spans-website"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        overflow-x: hidden;
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
